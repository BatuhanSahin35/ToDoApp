@model Template
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<form method="POST">
    <div class="form-group row">
        <div class="col-md-6">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        
       
        <div class="col-md-2">
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle mt-4" data-bs-toggle="dropdown">First Category</button>

                    <select asp-for="Description" class="dropdown-menu ">
                        <option value="Product">Books</option>
                        <option value="Movies">Movies</option>
                        <option value="Music">Music</option>
                    </select>
            </div>
        </div>     
        <div class="col-md-2">
                <button type="submit" class="btn btn-primary mt-4">Save Product</button>
        </div>

    </div>
</form>

</body>
</html>




